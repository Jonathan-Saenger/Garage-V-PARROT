{% extends 'base.html.twig' %}

{% block title %}Horaires d'ouverture{% endblock %}

{% block body %}
    {% for Horaire in Horaires %}
        {% if Horaire.getOuvertureSoir is not null %}
            <table>
                <tbody>
                    <tr>
                        <td> {{ Horaire.jour }}  </td>
                        <td>  :  </td>
                        <td>{{ Horaire.getHeureOuverture|format_time('short', locale='fr') }}</td>
                        <td> -  </td>
                        <td>{{ Horaire.getHeureFermeture|format_time('short', locale='fr') }}</td>
                        <td> ,  </td>
                        <td>{{ Horaire.getOuvertureSoir|format_time('short', locale='fr') }}</td>
                        <td> -  </td>
                        <td>{{ Horaire.getFermetureSoir|format_time('short', locale='fr') }}</td>
                    </tr>
                </tbody>   
            </table>      
        {% else %}  
                <table>
                <tbody>
                    <tr>
                        <td> {{ Horaire.jour }}  </td>
                        <td>  :  </td>
                        <td> <span> Ferm√© </span> <td>
                    </tr>
                </tbody>   
            </table>  
        {% endif %}
    {% endfor %}
{% endblock %}
